<%- include('./shared/header.ejs')%>

<div class="container text-center py-5 my-5 text-center">
  <div class="card py-5 mb-5">
    <a href="" data-toggle="modal" data-target="#profile">
      <img src="/img/avatar.png" class="avatar" alt="" />
    </a>
    <h3 class="py-2">leave a message for <%= user?.name %></h3>
    <div class="container w-50 m-auto">
       <!-- for error validation message -->
      <% if( errorMessage.find((val) => val.path[0] == 'message')?.message) { %>
        <div class="alert alert-danger">message at least 2 characters</div>
      <% } %>
      <form action="/handelUser/<%= userId %>" method="post">
        <textarea class="form-control" name="message" id="" cols="10" rows="9"
       placeholder="You cannot send a Sarahah to yourself, share your profile with your friends :)"
        ></textarea>
        <button class="btn btn-outline-info mt-3">
          <i class="far fa-paper-plane"></i> Send
        </button>
      </form>
    </div>
  </div>
  
<!-- /modal -->

<%-include('./shared/footer.ejs')%>
